<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".VerifyEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:layout_marginTop="50dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/verifyEmailTitle"
                android:text="Verify Your Email"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/verifyEmailText"
                android:text="Please check your email! Click on the account verification link sent to your e-mail and verify your account."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_semibold">
            </TextView>

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/verifyEmail"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:padding="8dp"
                android:hint="e-mail"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/logo_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito_regular">
            </EditText>

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/verifyPassword"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:padding="8dp"
                android:hint="password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/logo_lock_24"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nunito_regular">
            </EditText>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/verifyPswCheckBox"
                android:text="show password"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:padding="2dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_medium">
            </CheckBox>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:text="next"
                android:id="@+id/verifyEmailNextButton"
                android:textSize="20sp"
                android:textColor="@color/purple"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:fontFamily="@font/nunito_bold">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>